      200:
        body: 
          text/html:          
/batch:
  get:
    description: Mule batch process
    queryParameters: 
      routeId:
        type: integer
    responses:
      200:
        body: 
          text/html:
/error:
  get:
    description: Error handler will be exected and the error will be routed to the first matching handler
