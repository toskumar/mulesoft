          text/xml:  
/variables:
  get:
    description: Variables are used to store per-event values for use within a flow of a Mule app
    responses: 
      200:
        body: 
          text/xml:  
/flowControl:
  get:
    description: Choice, First Successful, Round Robin and Scatter-Gather
