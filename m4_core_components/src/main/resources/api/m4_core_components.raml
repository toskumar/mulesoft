      200:
        body: 
          text/html:   
/scopes:
  get:
    description: Scopes are Mule components that can wrap a group of operations within a flow to define a fine-grained behavior for them to apply
    queryParameters: 
      routeId:
        type: integer       
    responses: 
      200:
        body: 
          text/html:  
          
/component:
  get:
    description: Error handler will be exected and the error will be routed to the first matching handler
